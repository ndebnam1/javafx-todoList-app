<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController">
   <items>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox alignment="CENTER" prefHeight="35.0" spacing="10.0">
               <children>
                  <Button minWidth="100.0" mnemonicParsing="false" onAction="#goToCreateList" text="Create List" HBox.hgrow="ALWAYS" />
                  <Button fx:id="editBtn" disable="true" minWidth="100.0" mnemonicParsing="false" text="Edit " HBox.hgrow="ALWAYS" />
                  <Button fx:id="deleteBtn" disable="true" minWidth="100.0" mnemonicParsing="false" onAction="#handleDelete" text="Delete" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Label text="Your Lists">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tagField" maxWidth="300.0" promptText="search by #tag">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
               <opaqueInsets>
                  <Insets left="5.0" right="5.0" />
               </opaqueInsets>
            </TextField>
            <ScrollPane fitToWidth="true" prefHeight="350.0">
                    <content>
                        <FlowPane fx:id="listContainer" hgap="15.0" vgap="15.0" />
                    </content>
                    <VBox.margin>
                        <Insets top="25.0" />
                    </VBox.margin>
                </ScrollPane> 
         </children>
      </VBox>
   </items>
</SplitPane>
